# Environment Variables Template for Automation Orchestrator
# Copy this file to .env and fill in with actual values
# IMPORTANT: .env should NEVER be committed to version control!
# Add .env to .gitignore

# ============================================================================
# Salesforce Configuration
# ============================================================================
SF_INSTANCE_URL=https://na1.salesforce.com
SF_CLIENT_ID=your_client_id_here
SF_CLIENT_SECRET=your_client_secret_here
SF_USERNAME=your_sf_username@example.com
SF_PASSWORD=your_sf_password_here
SF_SECURITY_TOKEN=your_security_token_here

# ============================================================================
# HubSpot Configuration
# ============================================================================
HUBSPOT_API_KEY=your_hubspot_api_key_here
# OR use OAuth token:
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token_here

# ============================================================================
# Email/SMTP Configuration
# ============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_TO_EMAIL=alerts@example.com

# ============================================================================
# API Configuration
# ============================================================================
API_SECRET_KEY=generate_with_python_secrets_token_hex_32
API_HOST=0.0.0.0
API_PORT=8000
API_ENVIRONMENT=production

# ============================================================================
# Security Configuration
# ============================================================================
# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=1000

# Enable PII anonymization
ENABLE_PII_ANONYMIZATION=true

# Enable audit logging
ENABLE_AUDIT_LOGGING=true

# Audit retention days
AUDIT_RETENTION_DAYS=90

# ============================================================================
# Database Configuration (for future use)
# ============================================================================
# DATABASE_URL=postgresql://user:password@localhost/automation_orchestrator

# ============================================================================
# Webhook Configuration (external services)
# ============================================================================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/automation_orchestrator.log
