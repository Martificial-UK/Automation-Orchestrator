{
  "log_path": "./logs/automation_orchestrator.log",
  "log_level": "INFO",
  "workflows": [],
  "crm": {
    "api_base_url": "http://localhost:8000",
    "create_endpoint": "/api/leads",
    "get_endpoint": "/api/leads/{id}",
    "list_endpoint": "/api/leads",
    "auth": {
      "type": "bearer",
      "token": "demo-token"
    }
  },
  "lead_ingest": {
    "batch_size": 100,
    "timeout": 30
  },
  "email": {
    "smtp_server": "localhost",
    "smtp_port": 587,
    "from_address": "noreply@automation-orchestrator.local"
  },
  "deduplication": {
    "strategy": "email",
    "threshold": 0.95
  },
  "auth": {
    "enabled": true
  },
  "rate_limit": {
    "enabled": true,
    "window_seconds": 60,
    "max_requests": 120
  },
  "redis": {
    "host": "localhost",
    "port": 6379,
    "db": 0,
    "queue_prefix": "ao:tasks",
    "use_fake_redis": false,
    "allow_fallback": true,
    "required": false
  },
  "monitoring": {
    "queue_depth_warn": 1000
  }
}
